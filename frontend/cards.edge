@layout('layouts.userSettings')
@section('userMenu')

    <h2>Registered cards</h2>

    <br><a href='/mainSettings' class="btn btn-warning">Back to settings</a>

    <button class="btn btn-success" onclick="window.location.href='/addCard'">Add a card</button><br><br>

    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Main email</th>
                <th scope="col">Card Number</th>
                <th scope="col">Bank</th>
                <th scope="col">Expiration date</th>
                <th scope="col">Options</th>
            </tr>
        </thead>
        <tbody>
            @each(card in cards)
            <tr>
                <td></td>
                <td>{{card.uEmail}}</td>
                <td>{{card.cNumber}}</td>
                <td>{{card.bank}}</td>
                <td>{{card.expDate}}</td>
                <td>
                    <a href="/deleteCard" class="btn btn-danger">Remove card</a>
                </td>
            </tr>
            @endeach
        </tbody>
    </table>

@endsection